{
  "extends": "astro/tsconfigs/strictest",
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    // enforce 'type' imports
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": false,
    "strictBindCallApply": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
